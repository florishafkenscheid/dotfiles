(defwidget cpu_gpu []
  (eventbox
    :onhover "${EWW_CMD} update show_temps=true" 
    :onhoverlost "${EWW_CMD} update show_temps=false" 
	(box :class "cpu-gpu-widget"
	     :orientation "h"
	     :spacing 2
	     :valign "center"
	  (label
	    :class "cpu-usage"
	    :text "󰍛  ${ceil(EWW_CPU.avg)}%"
	  )
	  (label
	    :class "gpu-usage"
	    :text "  ${gpu_percent}%"
	  )
    )
  )
)
